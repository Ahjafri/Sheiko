<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.rwardrup.sheiko.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/primary"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="56dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="#4CAF50"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="@string/app_name"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textColor="@color/icons"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            tools:ignore="RtlHardcoded,UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph"
                    android:layout_width="match_parent"
                    android:layout_height="200dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/statsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <View
                                android:id="@+id/graphStatsDivider"
                                android:layout_width="140dp"
                                android:layout_height="1dp"
                                android:layout_gravity="top"
                                android:alpha="0.12"
                                android:background="@android:color/black" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Athlete Stats"
                                android:textAppearance="@android:style/TextAppearance.Material.Headline" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView31"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Total:"
                                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/currentTotal"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_marginBottom="0dp"
                                android:layout_weight="1"
                                android:elevation="0dp"
                                android:gravity="center_vertical"
                                android:paddingBottom="0dp"
                                android:text="650 Kg."
                                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                                android:textStyle="normal|bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Squat:"
                                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                                tools:ignore="NewApi" />

                            <TextView
                                android:id="@+id/squatMax"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="205 Kg."
                                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                                tools:ignore="NewApi" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Bench:"
                                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                                tools:ignore="NewApi" />

                            <TextView
                                android:id="@+id/benchMax"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="170 Kg."
                                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                                tools:ignore="NewApi" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView27"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Deadlift:"
                                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                                tools:ignore="NewApi" />

                            <TextView
                                android:id="@+id/deadliftMax"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="275 Kg."
                                android:textAppearance="@android:style/TextAppearance.Material.Body1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView35"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Wilks' Score:"
                                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/userWilks"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="455"
                                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                                android:textStyle="normal|bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/restTimerDivider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/settingsButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/settings"
                            android:elevation="2dp"
                            android:textColor="@color/primary_text" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.01" />

                        <Button
                            android:id="@+id/selectProgramButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/select_program"
                            android:elevation="2dp"
                            android:textColor="@color/primary_text" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <Button
                        android:id="@+id/TrainButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary_dark"
                        android:elevation="2dp"
                        android:text="@string/trainButtonText"
                        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
                        android:textColor="@color/icons"
                        tools:ignore="NewApi" />

                </LinearLayout>
            </LinearLayout>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/> -->

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        tools:context="com.rwardrup.sheiko.Settings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/primary"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="56dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="#4CAF50"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="@string/app_name"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textColor="@color/icons"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/settingsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="User Settings"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/userStatsINput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/weightInputRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/userWeightLabel"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/settingsTitle"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Weight:"
                                android:textColor="@color/secondary_text" />

                            <EditText
                                android:id="@+id/weightInput"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/userWeightLabel"
                                android:layout_alignBottom="@+id/userWeightLabel"
                                android:layout_toEndOf="@+id/textView11"
                                android:layout_toRightOf="@+id/textView11"
                                android:ems="3"
                                android:gravity="start"
                                android:inputType="number"
                                android:maxLength="3"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sexInputRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/genderLabel"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/genderSpinner"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignTop="@+id/genderSpinner"
                                android:gravity="center_vertical"
                                android:text="Sex:"
                                android:textColor="@color/secondary_text" />

                            <Spinner
                                android:id="@+id/genderSpinner"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/weightInput"
                                android:layout_alignStart="@+id/weightInput"
                                android:layout_alignTop="@+id/kgsRadioButton"
                                android:entries="@array/sexes"
                                android:gravity="center_vertical" />

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <View
                    android:id="@+id/SettingsDivider1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:alpha="0.12"
                    android:background="@android:color/black" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/userLiftNumbers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lift Numbers"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

                    <LinearLayout
                        android:id="@+id/squatInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:text="Squat: "
                            android:textColor="@color/secondary_text" />

                        <EditText
                            android:id="@+id/squatMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="4"
                            android:gravity="center_vertical|start"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="#1B5E20"
                            android:textSize="12sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/benchInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:text="Bench: "
                            android:textColor="@color/secondary_text" />

                        <EditText
                            android:id="@+id/benchMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="4"
                            android:gravity="center_vertical|start"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="#1B5E20"
                            android:textSize="12sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deadliftInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:text="Deadlift:"
                            android:textColor="@color/secondary_text" />

                        <EditText
                            android:id="@+id/dlMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="4"
                            android:gravity="center_vertical|start"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="#1B5E20"
                            android:textSize="12sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/SettingsDivider3"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:alpha="0.12"
                    android:background="@android:color/black" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/AdditionalSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appSettingsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="App Settings"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

                    <LinearLayout
                        android:id="@+id/AdditionalSettingsWidgets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/timerSettingsLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="Rest Timer"
                                android:textColor="@color/primary_text" />

                            <Button
                                android:id="@+id/timerSettingsButton"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/timer"
                                android:gravity="center" />

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/unitLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="top|center_horizontal"
                                android:text="Weight Unit"
                                android:textColor="@color/primary_text" />

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checkedButton="@+id/lbsRadiobutton">

                                <RadioButton
                                    android:id="@+id/kgsRadioButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:checked="true"
                                    android:gravity="top"
                                    android:text="Kg."
                                    android:textColor="@color/primary_text" />

                                <RadioButton
                                    android:id="@+id/lbsRadiobutton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="false"
                                    android:layout_alignParentRight="false"
                                    android:layout_alignTop="@+id/userWeightLabel"
                                    android:layout_weight="1"
                                    android:checked="true"
                                    android:gravity="top"
                                    android:text="Lbs."
                                    android:textColor="@color/primary_text" />

                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <View
                        android:id="@+id/SettingsDivider2"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/saveButtonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/saveSettings"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/save"
                        android:gravity="bottom|end" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>